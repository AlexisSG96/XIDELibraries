                        <Label text="Parity" GridPane.rowIndex="2" />
                        <Label text="Data Bits" GridPane.rowIndex="3" />
                        <Label text="Stop Bits" GridPane.rowIndex="4" />
                        <Label text="Flow Control" GridPane.rowIndex="5" />
