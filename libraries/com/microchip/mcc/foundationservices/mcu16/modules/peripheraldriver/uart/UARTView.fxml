                        <ComboBox fx:id="baudRate" editable="true" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <ComboBox fx:id="parity" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <ComboBox fx:id="dataBits" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <ComboBox fx:id="stopBits" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <ComboBox fx:id="flowcontrol" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label fx:id="baudError" text="Label" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" />
                     </padding>
                     <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                  </GridPane>
               </content>
            </TitledPane>
            <TitledPane fx:id="softwareSettings" animated="false" collapsible="false" text="Software Settings" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <content>
                  <GridPane hgap="5.0" vgap="5.0">
                     <children>
                        <Label text="Software Transmit Buffer Size" GridPane.rowIndex="1" />
                        <Label text="Software Receive Buffer Size" GridPane.rowIndex="2" />
                        <TextField fx:id="swTXBufferSize" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="swRXbufferSize" maxWidth="1.7976931348623157E308" onAction="#onAction" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Bytes" GridPane.columnIndex="2" GridPane.rowIndex="1" />
